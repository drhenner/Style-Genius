<% content_for :head do -%>
  <%#= javascript_include_tag "admin/index_grid" %>
<% end %>

<% content_for :bottom do -%>

<% end %>

<h2> Users </h2>

<div id="admin_users_page_wrapper">
  <div id="admin_users_grid_wrapper" class='column'>
    <table>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th></th>
        <th></th>
      </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.state %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      </tr>
    <% end %>
    </table>

  </div>
<%= will_paginate @users %>
  <div id="admin_new_user_button" class="admin_new_button last">
    <%= link_to "New User", new_admin_user_path, :class => "button", :id => "new_user_button" %>
  </div>
</div>

