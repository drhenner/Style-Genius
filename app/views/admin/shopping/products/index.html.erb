<% content_for :head do -%>
  <%#= javascript_include_tag "admin/index_grid" %>
<% end %>

<h2> Products </h2>

<div id="admin_shopping_products_page_wrapper">
  <div id="admin_shopping_products_grid_wrapper" class='column'>
    <table>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th></th>
        <th></th>
      </tr>

      <% @products.each do |product| %>
        <tr>
          <td><%= product.display_name %></td>
          <td><%= product.display_price_range %></td>
          <td><%= link_to 'Edit', edit_admin_shopping_product_path(product) %></td>
        </tr>
      <% end %>
    </table>

    <%= will_paginate @products %>
  </div>

</div>
