<h2>RMA`s</h2>

<% content_for :head do -%>
  <%#= javascript_include_tag "admin/index_grid" %>
<% end %>
<%= render :partial => '/admin/rma/sub_header'%>

<div id="admin_rma_page_wrapper">
  <div id="admin_rma_grid_wrapper" class='column'>
    <table>
      <tr>
        <th>Name</th>
        <th>order #</th>
        <th>number</th>
        <th>amount</th>
        <th>status</th>
      </tr>

      <% @return_authorizations.each do |return_authorization| %>
        <tr>
          <td><%= return_authorization.user_name %></td>
          <td><%= return_authorization.order_number %></td>
          <td><%= return_authorization.number %></td>
          <td><%= return_authorization.amount %></td>
          <td><%= return_authorization.state %></td>
          <td><%= link_to 'Show', admin_rma_order_return_authorization_path(@order, return_authorization) %></td>
          <td><%= link_to 'Edit', edit_admin_rma_order_return_authorization_path(@order, return_authorization) %></td>
        </tr>
      <% end %>
    </table>

    <%#= will_paginate @return_authorizations %>
  </div>

  <div id="admin_new_rma_button" class="admin_new_button last">
    <%#= link_to 'New Return authorization',
                new_admin_rma_return_authorization_path,
                :class => "button",
                :id => "new_rma_button" %>
  </div>
</div>

<div class='span-10'>

  <%= link_to 'Order Info',
              admin_history_order_path(@order),
              :class => 'button heart' %>
</div>
